<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.brb.fatdown.controller.FatDownController">
    <top>
        <ToolBar>
            <Label text="Profile:"/>
            <ComboBox fx:id="profileCombo" prefWidth="240"/>
            <Button fx:id="newProfileButton" text="New"/>
            <Button fx:id="saveProfileButton" text="Save"/>
        </ToolBar>
    </top>

    <center>
        <GridPane hgap="10" vgap="8">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label text="Имя:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="150" prefWidth="150"/>

            <Label text="Пол:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="sexChoice" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Возраст:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="150" prefWidth="150"/>

            <Label text="Вес (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="weightField" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="150"
                       prefWidth="150"/>

            <Label text="Рост (cm):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="heightField" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="150"
                       prefWidth="150"/>

            <Label text="Талия (cm):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="waistField" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="150"
                       prefWidth="150"/>

            <Label text="Шея (cm):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="neckField" GridPane.rowIndex="6" GridPane.columnIndex="1" maxWidth="150" prefWidth="150"/>

            <Label fx:id="hipLabel" text="Бёдра (cm):" GridPane.rowIndex="7" GridPane.columnIndex="0" maxWidth="150"
                   prefWidth="150"/>
            <TextField fx:id="hipField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Separator GridPane.rowIndex="8" GridPane.columnSpan="2"/>

            <Label text="Текущий % жира:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
            <Label fx:id="currentBfLabel" text="-" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

            <Label text="Целевой % жира:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="10" GridPane.columnIndex="1" alignment="CENTER_LEFT">
                <Slider fx:id="targetSlider" prefWidth="300"/>
                <Label fx:id="sliderValueLabel" text="-"/>
            </HBox>

            <Label text="Целевая дата:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
            <DatePicker fx:id="targetDatePicker" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

            <Label text="Активность:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
            <VBox GridPane.rowIndex="12" GridPane.columnIndex="1">
                <CheckBox fx:id="neatBox" text="NEAT (≈95 bpm)"/>
                <CheckBox fx:id="lissBox" text="LISS (≈110 bpm)"/>
                <CheckBox fx:id="mediumBox" text="Medium (≈130 bpm)"/>
            </VBox>

            <Label text="Коэф. активности:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="coefficientChoiceBox" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

            <Button fx:id="calculateButton" text="Рассчитать" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

            <Label text="Расход ккал: " GridPane.rowIndex="15" GridPane.columnIndex="0"/>
            <Label fx:id="tdee" text="-" GridPane.rowIndex="15" GridPane.columnIndex="1"/>

            <Label text="Минуты: "  GridPane.rowIndex="16" GridPane.columnIndex="0"/>
            <HBox spacing="8" GridPane.rowIndex="16" GridPane.columnIndex="1">
                <TextField fx:id="minutesToFatAndCarb" promptText="Введите минуты для конвертации"
                           GridPane.rowIndex="16" maxWidth="150" prefWidth="150"/>
                <Label text="BPM"/>
                <Slider fx:id="bpmSlider" prefWidth="150"/>
                <Label fx:id="bpmValueLabel" text="-"/>
            </HBox>

            <Label text="Жир и гликоген: " GridPane.rowIndex="17" GridPane.columnIndex="0"/>
            <Label fx:id="fatAndCarb" text="-" GridPane.rowIndex="17" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

    <right>
        <VBox spacing="8">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label text="Results" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="fatKgLabel" text="Жир к потере: -"/>
            <Label fx:id="fatKcalLabel" text="Эквивалент: -"/>
            <Separator/>
            <Label text="Необходимо всего времени:" style="-fx-font-weight: bold;"/>
            <Label fx:id="neatTimeLabel" text="NEAT: -"/>
            <Label fx:id="lissTimeLabel" text="LISS: -"/>
            <Label fx:id="mediumTimeLabel" text="Medium: -"/>
            <Separator/>
            <Label text="Требуется времени каждый день:" style="-fx-font-weight: bold;"/>
            <Label fx:id="perDayNeat" text="NEAT: -"/>
            <Label fx:id="perDayLiss" text="LISS: -"/>
            <Label fx:id="perDayMedium" text="Medium: -"/>
            <Separator/>
            <Label text="Кол-во углей за час тренировки:" style="-fx-font-weight: bold;"/>
            <Label fx:id="carbNeatPerHour" text="NEAT: -"/>
            <Label fx:id="carbLissPerHour" text="LISS: -"/>
            <Label fx:id="carbMedPerHour" text="Medium: -"/>
            <Separator/>
            <Label text="Кол-во углей за день тренировки:" style="-fx-font-weight: bold;"/>
            <Label fx:id="carbNeatPerDay" text="NEAT: -"/>
            <Label fx:id="carbLissPerDay" text="LISS: -"/>
            <Label fx:id="carbMedPerDay" text="Medium: -"/>
        </VBox>
    </right>
</BorderPane>
